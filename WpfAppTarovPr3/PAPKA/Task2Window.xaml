<Window x:Class="WpfAppTarovPr2.Task2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 2" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Задача 2: Определить количество слов, которые содержат ровно три буквы 'А'." 
                   FontSize="14" Margin="10" TextWrapping="Wrap" />

        <TextBlock Text="Введите строку:" Margin="10,50,0,0" />
        <TextBox Name="InputTextBox" Margin="10,80,10,0" Height="30" />

        <Button Name="Button_Calculate" Content="Рассчитать" 
                Margin="10,120,10,0" Height="30" Click="Button_Calculate_Click" />

        <TextBlock Text="Результат:" Margin="10,160,0,0" />
        <TextBlock Name="ResultTextBlock" Margin="10,190,0,0" FontSize="14" />
    </Grid>
</Window>
