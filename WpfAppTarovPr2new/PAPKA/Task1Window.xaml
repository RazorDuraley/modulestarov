<Window x:Class="WpfAppTarovPr2.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 1" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Задача 1: Дан номер некоторого года (положительное целое число). Вывести число дней в этом году, учитывая, что обычный год насчитывает 365 дней, а високосный — 366 дней. Високосным считается год, делящийся на 4, за исключением тех годов, которые делятся на 100 и не делятся на 400 (например, годы 300, 1300 и 1900 не являются високосными, а 1200 и 2000 — являются). чисел." 
                   FontSize="14" Margin="10" TextWrapping="Wrap" />

        <TextBlock Text="Введите год:" Margin="10,50,0,0" />
        <TextBox Name="InputTextBox" Margin="10,80,10,0" Height="30" />

        <Button Name="Button_Calculate" Content="Рассчитать" 
                Margin="10,120,10,0" Height="30" Click="Button_Calculate_Click" />

        <TextBlock Text="Результат:" Margin="10,160,0,0" />
        <TextBlock Name="ResultTextBlock" Margin="10,190,0,0" FontSize="14" />
    </Grid>
</Window>
