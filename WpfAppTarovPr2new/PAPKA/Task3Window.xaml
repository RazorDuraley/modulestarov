<Window x:Class="WpfAppTarovPr2.Task3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 3" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Задача 3: Проверьте, чередуются ли четные и нечетные числа в массиве." 
                   FontSize="14" Margin="10" TextWrapping="Wrap" />

        <TextBlock Text="Введите элементы массива (разделенные пробелами):" Margin="10,50,0,0" />
        <TextBox Name="InputTextBox" Margin="10,80,10,0" Height="30" />

        <Button Name="Button_Check" Content="Проверить" 
                Margin="10,120,10,0" Height="30" Click="Button_Check_Click" />

        <TextBlock Text="Результат:" Margin="10,160,0,0" />
        <TextBlock Name="ResultTextBlock" Margin="10,190,0,0" FontSize="14" />
    </Grid>
</Window>
